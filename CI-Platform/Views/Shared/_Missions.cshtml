                            {
                                <img src="/Image/selected-star.png" style="width: 28px;" />
                            }
                            @for (int i = Model.avgrating; i < 5; i++)
                            {
                                <img src="~/Image/star-empty.png" style="width: 32px;" />
                            }



                        </div>
                    </div>
                    @{
