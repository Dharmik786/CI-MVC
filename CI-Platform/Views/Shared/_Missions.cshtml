@if (pager.TotalPages > 0)
{
    <ul class="pagination justify-content-center">
        @if (pager.CurrentPage > 1)
        {
            <li class="mx-1">
                <a class="page-link text-muted" onclick='mySearch(jpg=1)'><span aria-hidden="true">&laquo;</span></a>
            </li>
            <li class="page-item mx-1">
                <a class="page-link text-muted" onclick='mySearch(jpg=@(pager.CurrentPage-1))'><span aria-hidden="true">&lsaquo;</span></a>
            </li>
        }
        @for (var pge = pager.StartPage; pge <= pager.EndPage; pge++)
        {
            <li class="page-item mx-1 @(pge==pager.CurrentPage ? "active":"")">
                <a class="page-link text-muted" onclick='mySearch(jpg=@pge)'>@pge</a>
            </li>
        }
        @if (pager.CurrentPage < pager.TotalPages)
        {
            <li class="page-item mx-1">
                <a class="page-link text-muted" onclick='mySearch(jpg=@(pager.CurrentPage+1))'><span aria-hidden="true">&rsaquo;</span></a>
            </li>
            <li class="mx-1">
                <a class="page-link text-muted" onclick='mySearch(jpg=@(pager.TotalPages))'><span aria-hidden="true">&raquo;</span></a>
            </li>
        }

    </ul>
}



