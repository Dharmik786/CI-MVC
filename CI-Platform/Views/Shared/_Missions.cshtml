<div class="row " id="myItem">

    @foreach (var item in @Model.mission)
    {

        <div class="missioncard col-12 col-md-6 col-lg-4 mb-2 " id="myItems">
            @{
                var applied = Model.missionApplications.FirstOrDefault(e => e.MissionId == item.MissionId && e.UserId == Convert.ToInt32(userId));
                var isClosed = 0;
                
                bool isFavrouite = (userId != null) ? Model.favoriteMissions.Any(e => e.MissionId == item.MissionId && e.UserId == Convert.ToInt32(userId)) : false;
                var MissionEndDate = item.EndDate.ToString().Split(" ")[0];
                DateTime EndDate = DateTime.Parse(MissionEndDate).Date;
                DateTime Deadline = EndDate.AddDays(-5);

                if (item.Deadline < DateTime.Now)
                {
                    isClosed = 1;
                }
            }
            <div class="card">

                <div class="img-event">
                    @{
                        var img = Model.missionMedia.FirstOrDefault(u => u.MissionId == item.MissionId);
                    }

                    @if (img.MediaPath != "")
                    {
                        <img class="card-img-top card-img" src="@img.MediaPath" ; alt="Card image cap">
                    }
                    else
                    {
                        <img class="card-img-top card-img" src="@img.Default" style="height:34vh" ; alt="Card image cap">
                    }

                    @if (applied != null)
                    {
                        <div class="applied-div">Applied</div>

                    }
                    @if (isClosed == 1)
                    {
                        <div class="close-div">Closed</div>
                    }
                    <div class="landing-page-top-right "><img src="/Image/pin.png" alt="">@item.City.Name</div>

                    <div class="landing-page-bottom-right d-flex flex-column add_fav">

                        @if (userId != null)
                        {
                            <button class="mb-2 landing-page-btn-img " onclick="addToFav(@item.MissionId)">

                                <i class="bi bi-heart-fill" style="@(isFavrouite ? "color:#F88634;" : "color:white;")" id="heart-@item.MissionId"></i>
                            </button>
                            <button class="landing-page-btn-img" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <img src="/Image/user.png" alt="">
                            </button>
                        }
                        else
                        {
                            <button class="mb-2 landing-page-btn-img" disabled> <img src="/Image/heart.png"> </button>

                            <button class="landing-page-btn-img" type="button" disabled>
                                <img src="/Image/user.png" alt="">
                            </button>

                        }
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Send Recommend TO</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body overflow-y-auto" style="height:200px;">
                                        @foreach (var u in Model.users)
                                        {
                                            <div class="col-12 d-flex my-1">
                                                <img src="/Image/volunteer1.png" class="rounded-5 col-3 d-flex me-auto" style="border-radius:50%;width:50px;height:50px">
                                                <label class="me-auto col-8 d-flex align-items-center"> @u.LastName @u.FirstName</label>
                                                <input class="form-check-input col-1 mt-2" type="checkbox" id="@u.UserId" name="mail">
                                            </div>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary d-inline" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary d-inline" id="sendmail" onclick="sendmail(@item.MissionId)">Send Mission</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div><button class="theme-btn ">@item.Theme.Title</button></div>
                </div>


