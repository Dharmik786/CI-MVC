@using CI_Entity.ViewModel;

@model MissionList

@{
    var userId = Context.Session.GetString("user");

}

<div class="container grid-container mt-2">
    <div class="row mb-2">
        <div class="d-flex">
            <div class="firstdiv me-auto d-flex">
                <p class="fs-4 me-2">Explore</p>
                <h4>@ViewBag.TotalMission mission</h4>
            </div>

            <div class="sort-list-grid d-flex">

                <div class="dropdown sort me-2 mt-1">

                    <button class=" btn dropdown d-flex " type="button" data-bs-toggle="dropdown"
                            aria-expanded="false">

                        <span class="sortby me-5 ">@ViewBag.sort By</span>
                        <img src="/Image/drop-down.png" alt="" class="sortaerrow">
                    </button>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" onclick="mySearch('Newest')">Newest</a></li>
                        <li><a class="dropdown-item" onclick="mySearch('Oldest')">Oldest </a></li>
                        <li><a class="dropdown-item" onclick="mySearch('Lowest Seats')">Lowest Seats</a></li>
                        <li><a class="dropdown-item" onclick="mySearch('Highest Seats')">Highest Seats</a></li>
                        @if (userId != null)
                        {
                            <li><a class="dropdown-item" onclick="mySearch('My Favourites')">My Favourites</a></li>
                        }
                        <li><a class="dropdown-item" onclick="mySearch('Registration deadline')">Registration deadline</a></li>
                    </ul>


                </div>



                <div class="me-2 mt-1">
                    <button onclick="grid()" class="grid"><img src="/Image/grid.png"></button>
                </div>
                <div class="mt-1 me-4">
                    <button onclick="list()" class="list"><img src="/Image/list.png" alt="list"></button>
                </div>
            </div>

        </div>
    </div>

</div>


@*-------------------------------------------------Missions-----------------------------------------------------------*@

<div class="row " id="myItem">

    @foreach (var item in @Model.mission)
    {

        <div class="missioncard col-12 col-md-6 col-lg-4 mb-2 " id="myItems">
            @{
                var applied = Model.missionApplications.FirstOrDefault(e => e.MissionId == item.MissionId && e.UserId == Convert.ToInt32(userId));
                var isClosed = 0;
                if (item.StartDate < DateTime.Now)
                {
                    isClosed = 1;
                }
                bool isFavrouite = (userId != null) ? Model.favoriteMissions.Any(e => e.MissionId == item.MissionId && e.UserId == Convert.ToInt32(userId)) : false;
            }
            <div class="card">

                <div class="img-event">
                    @{
                        var img = Model.missionMedia.FirstOrDefault(u => u.MissionId == item.MissionId);
                    }

                    @if (img.MediaPath != "")
                    {
                        <img class="card-img-top card-img" src="@img.MediaPath" ;
                        @* src="/Image/Grow-Trees-On-the-path-to-environment-sustainability-login.png"*@
                             alt="Card image cap">
                    }
                    else
                    {
                        <img class="card-img-top card-img" src="@img.Default" style="height:34vh" ;
                        @* src="/Image/Grow-Trees-On-the-path-to-environment-sustainability-login.png"*@
                             alt="Card image cap">
                    }

                    @if (applied != null)
                    {
                        <div class="applied-div">Applied</div>

                    }
                    @if (isClosed == 1)
                    {
                        <div class="close-div">Closed</div>
                    }
                    <div class="landing-page-top-right "><img src="/Image/pin.png" alt="">@item.City.Name</div>

                    <div class="landing-page-bottom-right d-flex flex-column add_fav">

                        @if (userId != null)
                        {
                            <button class="mb-2 landing-page-btn-img " onclick="addToFav(@item.MissionId)">
                                @* @{
                        var fav = Model.favoriteMissions.Where(e => e.MissionId == item.MissionId).FirstOrDefault();
                        }
                        @if (fav != null)
                        {
                        <img src="~/Image/fill-heart.png">
                        }
                        else
                        {
                        <img src="/Image/heart1.png">
                        }*@
                                <i class="bi bi-heart-fill" style="@(isFavrouite ? "color:#F88634;" : "color:white;")" id="heart-@item.MissionId"></i>
                            </button>
                            <button class="landing-page-btn-img" type="button" data-bs-toggle="modal" data-bs-target="#exampleModal">
                                <img src="/Image/user.png" alt="">
                            </button>
                        }
                        else
                        {
                            <button class="mb-2 landing-page-btn-img" disabled> <img src="/Image/heart.png"> </button>

                            <button class="landing-page-btn-img" type="button" disabled>
                                <img src="/Image/user.png" alt="">
                            </button>

                        }
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Send Recommend TO</h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body overflow-y-auto" style="height:200px;">
                                        @foreach (var u in Model.users)
                                        {
                                            <div>
                                                <img src="/Image/volunteer1.png" class="rounded-5 me-5" style="border-radius:50%;width:50px;height:50px">
                                                <label class=" ms-4 mt-2 me-auto"> @u.LastName @u.FirstName</label>
                                                <input class="form-check-input me-2 mt-2" type="checkbox" id="@u.UserId" name="mail">
                                            </div>
                                        }
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn btn-secondary d-inline" data-bs-dismiss="modal">Close</button>
                                        <button type="button" class="btn btn-primary d-inline" id="sendmail" onclick="sendmail(@item.MissionId)">Send Mission</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>






                    <div><button class="theme-btn ">@item.Theme.Title</button></div>
                    <!-- <button class="theme-btn ">Environment</button> -->
                </div>


                <div class="card-body mt-2">
                    <h5 class="card-title " style="overflow: hidden; display: -webkit-box;-webkit-line-clamp: 1;-webkit-box-orient: vertical;">
                        @item.Title
                    </h5>
                    <p class="card-text text-secondary " style="overflow: hidden; display: -webkit-box;-webkit-line-clamp: 2;-webkit-box-orient: vertical;">
                        @item.ShortDescription
                    </p>

                    <div class="d-flex">
                        <div class="card-text">@item.OrganizationName</div>
                        <div class="ms-auto">
                            @{
                                int avgRating = 0;
                                int rat = 0;
                                var ratingList = Model.missionRatings.Where(m => m.MissionId == item.MissionId).ToList();

                                if (ratingList.Count() > 0)
                                {

                                    foreach (var r in ratingList)
                                    {
                                        rat = rat + int.Parse(r.Rating);
                                    }
                                    avgRating = rat / ratingList.Count();
                                }
                                ViewBag.rat = ratingList.Count();

                                Model.avgrating = avgRating;
                            }

                            @for (int i = 1; i <= Model.avgrating; i++)
                            {
                                <img src="/Image/selected-star.png" />
                            }
                            @for (int i = Model.avgrating; i < 5; i++)
                            {
                                <img src="~/Image/star-empty.png" />
                            }



                        </div>
                    </div>
                    @{
                        var goalobj = Model.goalMissions.Where(e => e.MissionId == item.MissionId).FirstOrDefault();
                    }

                    @if (item.MissionType == "Time")
                    {
                        <div class="rule mt-2">
                            <hr>
                            <button class="date-btn mt-1 p-1">From @item.StartDate.ToString().Split(" ")[0] to @item.EndDate.ToString().Split(" ")[0]</button>
                            <hr>
                        </div>
                    }
                    else
                    {

                        <div class="rule mt-2">
                            <hr>
                            <button class="date-btn mt-1 p-1">@goalobj.GoalObjectiveText</button>
                            <hr>
                        </div>
                    }


                    <div class="d-flex">
                        <div><img src="/Image/Seats-left.png" class="mt-2"></div>
                        <div class="ms-2">
                            @item.Availability <p class="seat">seat Left</p>
                        </div>


                        @if (item.MissionType == "Time")
                        {
                            <div class="ms-auto"><img src="/Image//deadline.png" class="mt-2"></div>
                            <div class="ms-2">
                                @item.EndDate.ToString().Split(" ")[0] <p>Deadline</p>
                            </div>
                        }
                        else
                        {

                            <div class="ms-auto me-2"><img src="/Image/achieved.png" class="mt-2"></div>
                            <div class="ms-2 me-5" stye="width:100%">
                                <div class="progress mt-2" role="progressbar" aria-label="Example with label" aria-valuenow="25" aria-valuemin="0" aria-valuemax="100">
                                    <div class="progress-bar bg-warning" style="width: 25%">25%</div>
                                </div>
                                <fs-5>8000</fs-5>
                            </div>
                        }

                    </div>
                    <hr class="mt-0">

                    <div class="text-center">

                        @if (userId != null)
                        {

                            @if (applied == null)
                            {
                                <button class="Apply-btn p-2">
                                    <a href="/Volunteering/Volunteering?missionid=@item.MissionId" style="text-decoration:none;color:orange"> &nbsp;Apply &nbsp;&nbsp;<img src="/Image/right-arrow.png"></a>
                                </button>
                            }
                            else
                            {
                                <button class="Apply-btn p-2">
                                    <a href="/Volunteering/Volunteering?missionid=@item.MissionId" style="text-decoration:none;color:orange"> &nbsp;Already applied &nbsp;</a>
                                </button>
                            }
                        }
                        else
                        {
                            <button class="Apply-btn p-2">
                                <a href="/Volunteering/Volunteering?missionid=@item.MissionId" style="text-decoration:none;color:orange"> &nbsp;View Details &nbsp;&nbsp;<img src="/Image/right-arrow.png"></a>
                            </button>
                        }

                    </div>
                </div>
            </div>

        </div>
    }
</div>

<nav aria-label="Page navigation example" class="d-flex justify-content-center">

    <ul class="pagination">

        <li class="page-item @(ViewBag.CurrentPage == 0 ? "disabled" : "")">
            <a class="page-link" href="/Landingpage/_Missions/?sortOreder=@ViewBag.Order&searchQuery=@ViewBag.searchQuery&pageIndex=@(ViewBag.CurrentPage - 1)" aria-label="Previous">
                <span aria-hidden="true">&laquo;</span>
            </a>
        </li>

        @for (int i = 0; i < ViewBag.TotalPages; i++)
        {
            <li class="page-item @(i == ViewBag.CurrentPage ? "active" : "")">
                <a class="page-link" href="/Landingpage/_Missions/?sortOreder=@ViewBag.Order&searchQuery=@ViewBag.searchQuery&pageIndex=@i">@((i + 1).ToString())</a>
            </li>
        }

        <li class="page-item @(ViewBag.CurrentPage == ViewBag.TotalPages - 1 ? "disabled" : "")">
            <a class="page-link" href="/Landingpage/_Missions/?sortOreder=@ViewBag.Order&searchQuery=@ViewBag.searchQuery&pageIndex=@(ViewBag.CurrentPage + 1)" aria-label="Next">
                <span aria-hidden="true">&raquo;</span>
            </a>
        </li>

    </ul>
</nav>


<script>
    if (localStorage.getItem("view") === "list") {
        list();
    }

    function addToFav(missonid) {
        debugger;
        $.ajax({
            type: 'GET',
            url: "/Volunteering/addToFavourite",
            data: { 'missonid': missonid },
            success: function (result) {
                    console.log("Liked or Unliked mission.");
    @* $('.add_fav').html($(result).find('.add_fav').html());*@
                },
            error: function () {
                alert("please login first.");
            }

        });
        location.reload();

    }


    function sendmail(missionid) {
        const mail = Array.from(document.querySelectorAll('input[name="mail"]:checked')).map(el => el.id);
        console.log(mail)
        console.log(missionid)
        var send = document.getElementById("sendmail");
        send.innerHTML = "Sending";

        $.ajax({
            url: '/Volunteering/Sendmail',
            type: 'POST',
            data: { 'emailList': mail, 'missionid': missionid },
            success: function (result) {
                alert("Recomendations sent successfully!")
                    send.innerHTML = "sent"
            },
            error: function () {
                // Handle error response from the server, e.g. show an error message to the user
                alert('Error: Could not recommend mission.');
            }
        });




    }
</script>