                            <hr>
                        </div>
                    }


                    <div class="d-flex">
                        <div><img src="/Image/Seats-left.png" class="mt-2"></div>
                        <div class="ms-2">
                            @item.Availability <p class="seat">seat Left</p>
                        </div>


                        @if (item.MissionType == "Time")
                        {
