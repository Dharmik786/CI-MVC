@using CI_Entity.ViewModel;
@model AdiminVM;
<link src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
<link src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />


<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

<style>
    .mul-select {
        min-width: 100%;
    }

    .input-div {
        width: 100%;
        height: 100px;
        border-radius: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        border: 2px dotted black;
        background-color: white;
        position: relative;
    }

    output .image img {
        height: 100px;
    }

    output .image span {
        cursor: pointer;
    }

    output {
        display: flex;
    }
</style>
<div>
    <div class="mt-3 ms-2 d-flex mb-0">
        <h3 class="ps-2">Mission</h3>
        <div class="ms-auto me-5">
            <button class="px-3 py-1" style="color:orange;border-radius:20px;background:white;border-color:orange;"
                    data-bs-toggle="modal" data-bs-target="#AddMission">
                + Add
            </button>

            <div class="modal fade " id="AddMission" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog  modal-xl modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">Edit </h1>
                            <button type="button" class="bg-white border-0 btn-close" data-bs-dismiss="modal" aria-label="Close">
                                <i class="bi bi-x-lg"></i>
                            </button>
                        </div>
                        <div class="modal-body " style="height:550px;overflow-y:scroll;">
                            <div class="container">
                                <div class="row">
                                    <input type="hidden" id="Mid" />
                                    <div class="col-md-6 col-12 mb-2">
                                        <lable>Title</lable>
                                        <input type="text" id="Title" class="form-control" />
                                    </div>

                                    <div class="col-md-6 col-12 mb-2">
                                        <lable>Short Description</lable>
                                        <input type="text" id="ShortDescription" class="form-control" />
                                    </div>

                                    <div class="col-12 mb-2">
                                        <lable>Description</lable>
                                        <textarea class="form-control" id="Description"></textarea>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Select Country</lable>
                                        <select class="form-select" id="Country">
                                            @foreach (var i in Model.countries)
                                            {
                                                <option value="@i.CountryId">@i.Name</option>
                                            }
                                        </select>
                                    </div>
                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Select City</lable>
                                        <select class="form-select" id="City">
                                            @foreach (var i in Model.cities)
                                            {
                                                <option value="@i.CityId">@i.Name</option>
                                            }
                                        </select>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Organisation Name</lable>
                                        <input type="text" class="form-control" id="OrName" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Organisation Detail</lable>
                                        <input type="text" class="form-control" id="OrDetail" />
                                    </div>

                                    <div class="col-lg-4 col-md-6 col-12 mb-2">
                                        <lable>Select Mission Type </lable>
                                        <select class="form-select" id="Type" onchange="MissionType()">
                                            <option value="null" disabled selected>-- Select Mission Type--</option>
                                            <option value="Goal">Goal</option>
                                            <option value="Time">Time</option>
                                        </select>
                                    </div>

                                    <div class="col-lg-4 col-md-6 col-12 mb-2">
                                        <lable>Start Date</lable>
                                        <input type="datetime-local" class="form-control" id="Sdate" />
                                    </div>
                                    <div class="col-lg-4 col-md-6 col-12 mb-2">
                                        <lable>End Date</lable>
                                        <input type="datetime-local" class="form-control" id="Edate" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2 time-type d-none">
                                        <lable>Total Seats</lable>
                                        <input type="text" class="form-control" id="seats" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2 time-type d-none">
                                        <lable>Mission DeadLine</lable>
                                        <input type="datetime-local" class="form-control" id="Deadline" />
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Select Mission Theme </lable>
                                        <select class="form-select" id="Theme">
                                            @if (Model.missionThemes != null)
                                            {
                                                @foreach (var t in Model.missionThemes)
                                                {
                                                    <option value="@t.MissionThemeId">@t.Title</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <div class="col-lg-6 col-md-6 col-12 mb-2">
                                        <lable>Select Mission Skill </lable>
                                        <select class="form-select" id="Skill">
                                            @if (Model.skills != null)
                                            {
                                                @foreach (var t in Model.skills)
                                                {
                                                    <option value="@t.SkillId">@t.SkillName</option>
                                                }
                                            }
                                        </select>
                                    </div>

                                    <div class="col-12 mb-2 ">
                                        <lable>Select Mission Images</lable>
                                        <input type="file" class="file-input file form-control " multiple="multiple" accept="image/jpeg, image/png, image/jpg">
                                    </div>
                                    <output>
                                        @*@if (Model.storyMedia != null)
                                        {
                                        foreach (var m in Model.storyMedia)
                                        {
                                        <div class="image">
                                        <img src="@m.StoryPath" alt="image">
                                        <span onclick="deleteImage(0)" style="color:black;">×</span>
                                        </div>
                                        }
                                        }*@
                                    </output>

                                    <div class="col-12 ">
                                        <lable>Mission Video Url</lable>
                                        <input type="url" class="form-control" />
                                    </div>

                                </div>
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="modal-close-btn " data-bs-dismiss="modal">Close</button>
                            <button type="button" class="modal-save-btn">Save changes</button>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
    <hr class="mt-2 mb-1" />
    <div class="" id="Admin">
        <table id="example" class="table table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>Mission Title</th>
                    <th>Mission Type</th>
                    <th>Start Date</th>
                    <th>End Date</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.Missions != null)
                {
                    foreach (var i in Model.Missions)
                    {
                        <tr>
                            <td>@i.Title</td>
                            <td>@i.MissionType</td>
                            <td>@i.StartDate.ToString().Split(" ")[0]</td>
                            <td>@i.EndDate.ToString().Split(" ")[0]</td>
                            <td>
                                <button type="button" data-bs-toggle="modal" data-bs-target="#AddMission"
                                        class="bi bi-pencil-square Edit-btn" onclick="EditMission(@i.MissionId)"
                                        style="color:orange;border-radius:20px;background:white;border:none;">
                                    &nbsp;
                                </button>

                                <i class="bi bi-trash del-btn"></i>


                            </td>
                        </tr>
                    }
                }


            </tbody>

        </table>
    </div>
</div>
<script>
    function MissionType() {
        if (document.getElementById("Type").value == "Time") {
            $(".time-type").removeClass("d-none");
        }
        else {
            $(".time-type").addClass("d-none");

        }

    }
</script>