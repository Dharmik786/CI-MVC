@using CI_Entity.ViewModel;
@model AdminVM;
<link src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
<link src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>
<div>
    <div class="mt-3 ms-2 d-flex mb-0">
        <h3 class="ps-2">Skills</h3>
        <div class="ms-auto me-5">
            <button type="button" data-bs-toggle="modal" data-bs-target="#addskill"
                    class="px-3 py-1" style="color:orange;border-radius:20px;background:white;border-color:orange;" onclick="EmptySkill()">
                + Add
            </button>

            <div class="modal fade" id="addskill" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog modal-dialog-centered">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <form asp-controller="Admin" asp-action="AddSkill" method="post">
                            <div class="modal-body">
                                <div class="form-group">
                                    <label>Mission Skill</label>
                                    <input type="text" asp-for="singleskill" class="form-control" id="missionSkill" onkeypress="skillPress()">
                                    <span class="text-danger skill-validation d-none">Enter The Skill</span>
                                </div>
                                <span>Skill Status</span>
                                <select class="form-select" id="SkillStatus1">
                                    <option value="1" selected>Active</option>
                                    <option value="0">In-Active</option>
                                </select>
                            </div>
                            <div class="modal-footer">
                                <button type="button" class="modal-close-btn px-2" data-bs-dismiss="modal">
                                    Close
                                </button>
                                <button type="button" onclick="CheckSkill()" class="modal-save-btn px-2" @*onclick="AddSkill()"*@>Add</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr class="mt-2 mb-1" />
    <div class="" id="Admin">
        <table id="example" class="table table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>Mission Title</th>
                    <th>Status</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.skills != null)
                {
                    foreach (var i in Model.skills)
                    {
                        <tr>
                            <td>@i.SkillName</td>
                            @if(i.Status == "1")
                            {
                                <td class="text-success status" @*onclick="SkillStatus(@i.SkillId)*@>Active</td>
                            }
                            else
                            {
                                <td class="text-danger status" @*onclick="SkillStatus(@i.SkillId)*@>In-Active</td>
                            }
                            <td>
                                <button type="button" style="border:none;background-color:white;" data-bs-toggle="modal" data-bs-target="#editskill">
                                    <i class="bi bi-pencil-square Edit-btn" style="color:orange" onclick="EditSkill(@i.SkillId)"></i> &nbsp;
                                </button>

                                <div class="modal fade" id="editskill" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true">
                                    <div class="modal-dialog modal-dialog-centered">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="staticBackdropLabel">Modal title</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <form asp-controller="Admin" asp-action="UpdateSkill" method="post" onkeypress="skillPress()">
                                                <div class="modal-body">
                                                    <div class="form-group">
                                                        <label>Mission Skills</label>
                                                        <input type="text" asp-for="singleskill" class="form-control" id="mskill">
                                                        <input type="text" asp-for="skillId" id="mskillid" hidden>
                                                        <span class="text-danger skill-validation d-none">Enter The Skill</span>

                                                    </div>
                                                    <span>Skill Status</span>
                                                    <select class="form-select" id="SkillStatus2">
                                                        <option value="1" selected>Active</option>
                                                        <option value="0">In-Active</option>
                                                    </select>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="modal-close-btn px-2" data-bs-dismiss="modal">Close</button>
                                                    <button type="button" class="modal-save-btn px-2" onclick="UpdateSkill()">Update</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>


                                <i class="bi bi-trash del-btn" onclick="DeleteSkill(@i.SkillId)"></i>
                            
                            </td>
                        </tr>
                    }
                }


            </tbody>

        </table>
    </div>
</div>
