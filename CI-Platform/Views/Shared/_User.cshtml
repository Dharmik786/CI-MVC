@using CI_Entity.ViewModel;
@model AdiminVM;
<link src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
<link src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

<div>
    <div class="mt-3 ms-2 d-flex mb-0">
        <h3 class="ps-2">User</h3>
        <div class="ms-auto me-5">
            <button class="px-3 py-1" style="color:orange;border-radius:20px;background:white;border-color:orange;">
                + Add
            </button>

            @* <button onclick="onclickAdd()" class="btn mb-2 landing-page-apply-mission-btn" data-bs-toggle="modal" data-bs-target="#exampleModal1">
            <i class="fa-regular fa-plus" style="color: #F88735"></i>
            Add
            </button>*@
        </div>
    </div>
    <hr class="mt-2 mb-1" />
    <div class="" id="Admin">
        <div style="overflow-x:scroll">

            <table id="example" class="table table-striped" style="width:100%">

                <thead>
                    <tr>
                        <th>First Name</th>
                        <th>Last Name</th>
                        <th>Email</th>
                        <th>Employee Id</th>
                        <th>Department</th>
                        <th>Status</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Users != null)
                    {
                        foreach (var i in Model.Users)
                        {
                            <tr>
                                <td>@i.FirstName</td>
                                <td>@i.LastName</td>
                                <td>@i.Email</td>
                                <td>@i.EmployeeId</td>
                                <td>@i.Department</td>
                                <td>@i.Status</td>
                                <td>
                                    <i class="bi bi-pencil-square Edit-btn" data-bs-toggle="modal" data-bs-target="#exampleModal1"
                                       id="@i.UserId" onclick="editAdminUser(this.id)" style="color:orange"></i> &nbsp;




                                    <div class="modal fade" id="exampleModal1" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg modal-dialog-centered">
                                            <div class="modal-content">

                                                <div class="modal-header">
                                                    <h5 class="modal-title" id="exampleModalLabel">User Profile</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>


                                                <div class="modal-body">
                                                    <form>
                                                        <div class="row">
                                                            <div class="d-flex" style="justify-content:center;">
                                                                @if (i.Avatar != "")
                                                                {
                                                                    <img src="@i.Avatar" class="rounded-circle" style="height:150px;width:150px;">
                                                                }
                                                                else
                                                                {
                                                                    <img src="/image/volunteer3.png" class="rounded-circle" style="height:150px;width:150px;">
                                                                }
                                                            </div>
                                                        </div>


                                                        <div class="row mt-2">
                                                            <div class="col-12 col-md-6 col-lg-4">
                                                                <label>First Name</label>
                                                                <input type="text" class="form-control" placeholder="Firstname">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4">
                                                                <label>Last Name</label>
                                                                <input type="text" class="form-control" placeholder="Lastname">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4">
                                                                <label>Email Address</label>
                                                                <input type="email" class="form-control" placeholder="Email">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>Password</label>
                                                                <input type="password" class="form-control" placeholder="Password">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>Employee Id</label>
                                                                <input type="text" class="form-control" placeholder="Employee">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>Department</label>
                                                                <input type="text" class="form-control" placeholder="Department">
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>Country</label>
                                                                <select class="form-control" id="exampleFormControlSelect1">
                                                                    <option value="Null" selected>Select Country</option>
                                                                    @foreach (var c in Model.countries)
                                                                    {
                                                                        <option value="@c.CountryId">@c.Name</option>
                                                                    }
                                                                </select>
                                                            </div>

                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>City</label>
                                                                <select class="form-control" id="exampleFormControlSelect1">
                                                                    <option value="Null" selected>Select City</option>
                                                                    @foreach (var c in Model.cities)
                                                                    {
                                                                        <option value="@c.CityId">@c.Name</option>
                                                                    }
                                                                </select>
                                                            </div>
                                                            <div class="col-12 col-md-6 col-lg-4 mt-2">
                                                                <label>City</label>
                                                                <select class="form-control">
                                                                    <option>Active</option>
                                                                    <option>In-Active</option>

                                                                </select>
                                                            </div>
                                                            <div class="col-12">
                                                                <label>Profile text</label>
                                                                <textarea class="form-control" placeholder="Profile text"> </textarea>
                                                            </div>
                                                            <input type="hidden" />
                                                        </div>
                                                    </form>

                                                </div>



                                                <div class="modal-footer">
                                                    <button type="button" data-bs-dismiss="modal" class="modal-close-btn">Close</button>
                                                    <button type="button" data-bs-dismiss="modal" class="modal-save-btn" onclick="saveAdminUser()">Save changes</button>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <i class="bi bi-trash del-btn"></i>
                                </td>
                            </tr>
                        }
                    }


                </tbody>

            </table>

        </div>
    </div>
</div>