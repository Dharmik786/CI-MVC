@using CI_Entity.ViewModel
@model MissionVM

<style>
    output img {
        width: 100px;
        height: 100px;
    }

    .input-div1 {
        width: 100%;
        height: 200px;
        border-radius: 5px;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        border: 2px dotted black;
        background-color: white;
        position: relative;
    }

    .file {
        width: 100%;
        height: 100%;
        position: absolute;
        opacity: 0;
        cursor: pointer;
    }

    .dropzone {
    border:none!important;
    }
</style>
<div class="container mt-4">

    <h3>Add/Edit Mission</h3>
    <hr class="m-2" />

    <form asp-controller="Admin" asp-action="AddEditMission" class="dropzone" id="my-awesome-dropzone" asp-area="Admin" method="post" enctype="multipart/form-data">
        <div class="row mb-5">
            <input asp-for="missionId" type="hidden" id="MissioniId" />
            <div class="col-md-6 col-12 mb-2">
                <lable>Title</lable>
                <input type="text" asp-for="title" id="Title" class="form-control" />
                <span asp-validation-for="title" class="text-danger"></span>
            </div>

            <div class="col-md-6 col-12 mb-2">
                <lable>Short Description</lable>
                <input asp-for="shortDescription" type="text" id="ShortDescription" class="form-control" />
                <span asp-validation-for="shortDescription" class="text-danger"></span>

            </div>

            <div class="col-12 mb-2">
                <lable>Description</lable>
                <textarea asp-for="description" class="form-control" id="Description"></textarea>
                <span asp-validation-for="description" class="text-danger"></span>

            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Select Country</lable>
                <select asp-for="countryId" class="form-select" id="Country">
                    <option selected disabled>--select Country--</option>
                    @foreach (var i in Model.countries)
                    {
                        <option value="@i.CountryId">@i.Name</option>
                    }
                </select>
                <span asp-validation-for="countryId" class="text-danger"></span>

            </div>
            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Select City</lable>
                <select asp-for="cityId" class="form-select" id="City">
                    <option selected disabled>--select City--</option>
                    @foreach (var i in Model.cities)
                    {
                        <option value="@i.CityId">@i.Name</option>
                    }
                </select>
                <span asp-validation-for="cityId" class="text-danger"></span>

            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Organisation Name</lable>
                <input asp-for="OrganisationName" type="text" class="form-control" id="OrName" />
                <span asp-validation-for="OrganisationName" class="text-danger"></span>
            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Organisation Detail</lable>
                <input asp-for="OrganisationDetail" type="text" class="form-control" id="OrDetail" />
                <span asp-validation-for="OrganisationDetail" class="text-danger"></span>
            </div>

            <div class="col-lg-4 col-md-6 col-12 mb-2">
                <lable>Select Mission Type </lable>
                <select asp-for="missionType" class="form-select" id="Type" onchange="MissionType()">
                    <option value="null" disabled selected>-- Select Mission Type--</option>
                    <option value="Goal">Goal</option>
                    <option value="Time">Time</option>
                </select>
                <span asp-validation-for="missionType" class="text-danger"></span>
            </div>

            

            <div class="col-lg-4 col-md-6 col-12 mb-2">
                <lable>Start Date</lable>
                <input asp-for="startDate" type="date" class="form-control" id="Sdate" min="2023-02-23" />
                <span asp-validation-for="startDate" class="text-danger"></span>
            </div>
            <div class="col-lg-4 col-md-6 col-12 mb-2">
                <lable>End Date</lable>
                <input asp-for="endDate" type="datetime-local" class="form-control" id="Edate" min="2023-02-23" />
                <span asp-validation-for="endDate" class="text-danger"></span>

            </div>
           
            <div class="col-lg-6 col-md-6 col-12 mb-2 ">
                <lable>Enter GoalObjective Text</lable>
                <input asp-for="goalObjectiveText" type="text" class="form-control" id="seats" />
            </div>
            <div class="col-lg-6 col-md-6 col-12 mb-2 ">
                <lable>Enter GoalObjective value</lable>
                <input asp-for="goalValue" type="number"  class="form-control" id="seats" />
            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2 ">
                <lable>Total Seats</lable>
                <input asp-for="seats" type="number" class="form-control" id="seats" min="1"  />
                <span asp-validation-for="seats" class="text-danger"></span>
            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2 ">
                <lable>Mission DeadLine</lable>
                <input asp-for="deadline" type="datetime-local" class="form-control" id="Deadline" min="2023-02-23" />
                <span asp-validation-for="deadline" class="text-danger"></span>

            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Select Mission Theme </lable>
                <select asp-for="missionThemeId" class="form-select" id="Theme">
                    @if (Model.missionThemes != null)
                    {
                        @foreach (var t in Model.missionThemes)
                        {
                            <option value="@t.MissionThemeId">@t.Title</option>
                        }
                    }
                </select>
            </div>

            <div class="col-lg-6 col-md-6 col-12 mb-2">
                <lable>Select Mission Avaliblity </lable>
                <select asp-for="availability" class="form-select" id="Theme">
                  <option selected disabled>--Select Availability--</option>
                    <option value="Weekly">Weekly</option>
                    <option value="Monthly">Monthly</option>
                    <option value="Yearly">Yearly</option>
                </select>
                <span asp-validation-for="availability" class="text-danger"></span>
            </div>

            <lable>Mission Theme </lable>
