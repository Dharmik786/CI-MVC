@using CI_Entity.ViewModel;
@model AdminVM;
<link src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.2.0/css/bootstrap.min.css" />
<link src="https://cdn.datatables.net/1.13.4/css/dataTables.bootstrap5.min.css" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css" />

<script>
    $(document).ready(function () {
        $('#example').DataTable();
    });
</script>

<style>
    .btn-edit-image {
        border-radius: 63px;
        height: 44px;
        width: 44px;
        text-align: center;
    }

    .user-profile-image {
        height: 370px;
        width: 370px;
        /* border-radius: 100px;*/
    }

</style>
<div>
    <div class="mt-3 ms-2 d-flex mb-0">
        <h3 class="ps-2">Banner Management</h3>
        <button type="button" data-bs-toggle="modal" data-bs-target="#Addbanner" onclick="Addbanner()"
                class="px-3 py-1 ms-auto" style="color:orange;border-radius:20px;background:white;border-color:orange;">
            + Add
        </button>




        <div class="modal fade " id="Addbanner" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
            <div class="modal-dialog  modal-xl modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header">
                        <h1 class="modal-title fs-5" id="exampleModalLabel">Banner</h1>
                        <button type="button" class="bg-white border-0 btn-close" data-bs-dismiss="modal" aria-label="Close" >
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </div>

                    <div class="modal-body">
                        <div class="container">
                            <div class="Row">
                                <div class="col-12  ">
                                    <label>Select Banner Img</label>
                                    <div class="upload-btn-wrapper position-relative d-flex justify-content-center col-md-12">

                                        <img src="/image/plantation-and-afforestation-programme.png" class="user-profile-image" id="imgTag" style="position:relative!important;" />

                                        <button class="btn-edit-image" onclick="BannerChange()" style="position:absolute!important;bottom:-10px!important;"><i class="bi bi-person-bounding-box change-image-icon" style="color:black;"></i></button>

                                        <input type="file" style="display:none;" id="imginput" accept="image/png, image/gif, image/jpeg"  onchange="change()"/>
                                    </div>
                                    <span class="d-none text-danger" id="ban-val">Please Select Image for Banner</span>
                                    <input type="hidden" id="BannerId" />
                                </div>
                                <div class="col-12">
                                    <label>Description</label>
                                    <textarea id="discrption" class="text-break form-control" rows="9"></textarea>
                                    <span class="d-none text-danger" id="desc-val">Please Enter The Description</span>
                                </div>
                                <div class="col-12">
                                    <label> Sort Order Value</label>
                                    <input type="number" id="sortorder" min="0" class="form-control" />
                                    <span class="d-none text-danger" id="sort-val">Please Enter The Sort Order</span>

                                </div>


                            </div>
                        </div>

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="modal-close-btn " data-bs-dismiss="modal">Close</button>
                        <button type="button" onclick="AddUpdateBanner()" class="modal-save-btn">Save changes</button>
                    </div>

                </div>
            </div>
        </div>


    </div>
    <hr class="mt-2 mb-1" />
    <div class="" id="Admin">
        <table id="example" class="table table-striped" style="width:100%">

            <thead>
                <tr>
                    <th>Banner Image</th>
                    <th>Description</th>
                    <th>Sort order</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @if (Model.banner != null)
                {

                    foreach (var i in Model.banner)
                    {
                        if(i.DeletedAt == null)
                        {
                            <tr>
                                <td style="width:20%" class="mx-0">
                                    <img src="@i.Image" style="height:auto;width:60%;" />
                                </td>
                                <td>@i.Text</td>
                                <td style="width:30%">@i.SortOrder</td>
                                <td>
                                    <button type="button" data-bs-toggle="modal" data-bs-target="#Addbanner"
                                            class="bi bi-pencil-square Edit-btn" onclick="EditBanner(@i.BannerId)"
                                            style="color:orange;border-radius:20px;background:white;border:none;">
                                        &nbsp;
                                    </button>
                                    <i class="bi bi-trash del-btn" onclick="deletebanner(@i.BannerId)"></i>
                                </td>
                            </tr>

                        }  
                        

                    }
                }


            </tbody>

        </table>
    </div>
</div>
