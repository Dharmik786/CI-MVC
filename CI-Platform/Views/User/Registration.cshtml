                                <div class="text-danger" id="viewvag">@ViewBag.RegEmail</div>
                                @*@Html.ValidationMessageFor(model => model.Email,"",new { @class = "text-danger"})*@
                            </div>
                            <div class="input-div mt-3">
                                <label asp-for="Password">Password</label>
