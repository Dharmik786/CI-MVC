@model CI_Entity.ViewModel.MissionList
@{
    var id = Context.Session.GetString("userID");
}
@{
    Layout = "_navbar1";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="/css/Volunteeringtimesheet.css" asp-append-version="true" />

</head>
<body>
    <div class="container timesheet">

        <div class="row ">
            <label class="fs-4"> Volunteering Timesheet</label>
        </div>

        <div class="row  d-flex justify-content-center  ">

            <div class="col-12 col-xl-5 col-lg-5 mt-4  borderbox">

                <div class="row  cardtitleborder">

                    <div class="col-8 d-flex  align-items-center">
                        <label class="fs-5"> Volunteering Hour</label>
                    </div>
                    <div class="col-4">
                        <button class="rounded-pill d-flex justify-content-center align-items-center ms-auto  py-2 px-4 me-2 my-2 addbtn" data-bs-toggle="modal" data-bs-target="#TimeADDbtn">
                            <i class="bi bi-plus-lg me-2 "></i>
                            <span> ADD</span>
                        </button>
                        <div class="modal fade " id="TimeADDbtn" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog  modal-dialog-centered">
                                <div class="modal-content">
                                    <form asp-controller="Home" asp-action="AddTimeSheet" method="post">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Please input below Volunteering Hours</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container">
                                                <div class="row">
                                                    <lable class="col-6 fs-6">Mission</lable>
                                                    <select class=" datediv  py-1 ro col-12" asp-for="missionId" aria-label="Default select example">

                                                        @foreach (var i in Model.missionApplications)
                                                        {
                                                            if (i.Mission.MissionType == "Time")
                                                            {
                                                                <option value="@i.Mission.MissionId">@i.Mission.Title</option>
                                                            }
                                                        }
                                                    </select>

                                                </div>
                                                <div class="row mt-2">
                                                    <lable class="col-6 fs-6">Date Volunteered</lable>
                                                    <input asp-for="date" class="col-12  datediv py-1 rounded-1" type="date" />
                                                </div>
                                                <div class="row mt-1 ">
                                                    <div class=" col-12 col-xl-6 col-1g-6 p-0">
                                                        <label class=" col-8 fs-6"> Hours</label>
                                                        <input asp-for="hour" type="number" min="0" max="23" placeholder="Enter Spent Hours " class="py-1 datediv rounded-1 w-100 px-2 " />
                                                    </div>
                                                    <div class=" col-12 col-xl-6 col-1g-6 p-0  ">
                                                        <label class=" col-8 fs-6"> Minutes</label>
                                                        <input asp-for="min" type="number" min="0" max="59" placeholder="Enter Spent Minutes " class=" ms-0 ms-xl-2  py-1 datediv rounded-1   w-100  me-2" />
                                                    </div>
                                                </div>
                                                <div class="row mt-1">
                                                    <label class=" col-8 fs-6"> Enter Your Message</label>

                                                    <textarea asp-for="notes" class=" datediv rounded-1 mt-1 " placeholder="Leave a comment here" id="floatingTextarea"></textarea>


                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="rounded-pill bg-white px-3 py-1" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="rounded-pill addbtn  px-3 py-1">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>


                </div>

                <div class="row overflow-y-auto" style="height:200px;">
                    <table class="table table-borderless">
                        <thead>
                            <tr>
                                <th scope="col">Mission</th>
                                <th scope="col">Date </th>
                                <th scope="col">Hour</th>
                                <th scope="col">Minute</th>
                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>

                        <tbody>
                            <tr>

                                <td> hii</td>
                                <td> hii</td>
                                <td> hii</td>
                                <td> hii</td>
                                <td class="d-flex align-items-center mt-1"> <i class="bi bi-pencil-square editimg"></i></td>
                                <td> <img src="/Image/bin.png" /></td>
                            </tr>

                        </tbody>

                    </table>
                </div>


            </div>

            @*-------------------------------------------------------**********************************************-------------------------------------------------------------------------------------------*@
            <div class="col-12 col-xl-5 col-lg-5   ms-0 ms-xl-4 ms-lg-4 mt-4 borderbox">
                <div class="row cardtitleborder">
                    <div class="col-8  d-flex  align-items-center">
                        <label class="fs-5"> Volunteering Goal</label>
                    </div>
                    <div class="col-4">
                        <button class="rounded-pill d-flex justify-content-center align-items-center py-2 px-4 ms-auto me-2 my-2  addbtn" data-bs-toggle="modal" data-bs-target="#GoalADDbtn">
                            <i class="bi bi-plus-lg me-2 "></i>
                            <span>  ADD</span>
                        </button>
                        @*modal*@
                        <div class="modal fade" id="GoalADDbtn" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                            <div class="modal-dialog  modal-dialog-centered">
                                <div class="modal-content">
                                    <form asp-controller="Home" asp-action="AddTimeSheet" method="post">
                                        <div class="modal-header">
                                            <h1 class="modal-title fs-5" id="exampleModalLabel">Please input below Volunteering Goal</h1>
                                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                        </div>
                                        <div class="modal-body">
                                            <div class="container">
                                                <div class="row">
                                                    <lable class="col-6 fs-6">Mission</lable>
                                                    <select asp-for="missionId" class=" datediv  py-1 ro col-12" aria-label="Default select example">
                                                        @foreach (var i in Model.missionApplications)
                                                        {
                                                            if (i.Mission.MissionType == "Goal")
                                                            {
                                                                <option value="@i.MissionId">@i.Mission.Title</option>
                                                            }
                                                        }
                                                    </select>

                                                </div>
                                                <div class="row mt-2">
                                                    <lable class="col-6 fs-6">Action</lable>
                                                    <input asp-for="action" class="col-12  datediv py-1 rounded-1" placeholder="Enter Actions" type="text" />
                                                </div>
                                                <div class="row mt-1 ">

                                                    <label class=" col-8 fs-6"> Date of Volunteered</label>
                                                    <input asp-for="date" type="Date" placeholder="Enter Date " class="py-1 datediv rounded-1 col-12 " />


                                                </div>
                                                <div class="row mt-1">
                                                    <label class=" col-8 fs-6"> Enter Your Message</label>

                                                    <textarea asp-for="notes" class=" datediv rounded-1 mt-1 " placeholder="Leave a comment here" id="floatingTextarea"></textarea>

                                                </div>
                                            </div>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="rounded-pill bg-white px-3 py-1" data-bs-dismiss="modal">Cancel</button>
                                            <button type="submit" class="rounded-pill addbtn  px-3 py-1">Submit</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>

                    </div>

                </div>
                <div class="row overflow-auto" style="height:300px;">
                    <table class="table table-borderless tbl">
                        <thead>
                            <tr>
                                <th scope="col">Mission</th>
                                <th scope="col">Date </th>
                                <th scope="col">Action</th>

                                <th scope="col"></th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var i in Model.timesheets)
                            {
                                <tr>
                                    <td> @i.Mission.Title</td>
                                    <td> @i.DateVolunteered.ToString().Split(" ")[0]</td>
                                    <td> @i.Action</td>

                                    <td class="d-flex align-items-center mt-1">
                                        <button class=" addbtn" data-bs-toggle="modal" data-bs-target="#GoalEditbtn">
                                            <i class="bi bi-pencil-square editimg" onclick="EditTimeSheet(@i.TimesheetId)"></i>
                                        </button>
                                    </td>

                                    <td> <img src="/Image/bin.png" id="@i.TimesheetId" onclick="Delete(this.id)" /></td>
                                </tr>
                                @*modal*@
                                <div class="modal fade" id="GoalEditbtn" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                    <div class="modal-dialog  modal-dialog-centered">
                                        <div class="modal-content">
                                            <form asp-controller="Home" asp-action="AddTimeSheet" method="post">
                                                <div class="modal-header">
                                                    <h1 class="modal-title fs-5" id="exampleModalLabel">Please input below Volunteering Goal</h1>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <div class="container">
                                                        <div class="row">
                                                            <lable class="col-6 fs-6">Mission</lable>
                                                            <select asp-for="missionId" class=" datediv  py-1 ro col-12" aria-label="Default select example" id="mission">
                                                                @foreach (var j in Model.missionApplications)
                                                                {
                                                                    <option value="@j.MissionId">@j.Mission.Title</option>
                                                                }
                                                            </select>

                                                        </div>
                                                        <div class="row mt-2">
                                                            <lable class="col-6 fs-6">Action</lable>
                                                            <input asp-for="action" id="Gaction" class="col-12  datediv py-1 rounded-1" placeholder="Enter Actions" type="text" />
                                                        </div>
                                                        <div class="row mt-1 ">

                                                            <label class=" col-8 fs-6"> Date of Volunteered</label>
                                                            <input asp-for="date" type="datetime-local" id="dateVolunteered" placeholder="Enter Date " class="py-1 datediv rounded-1 col-12 " />


                                                        </div>
                                                        <div class="row mt-1">
                                                            <label class=" col-8 fs-6"> Enter Your Message</label>

                                                            <textarea asp-for="notes" id="notes" class=" datediv rounded-1 mt-1 " placeholder="Leave a comment here" id="floatingTextarea"></textarea>

                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="rounded-pill bg-white px-3 py-1" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="rounded-pill addbtn  px-3 py-1">Update</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>

                            }

                        </tbody>

                    </table>
                </div>
            </div>
        </div>


    </div>

</body>
<script src="~/js/TimeSheet.js"></script>

</html>
