</body>

<script>
    function DraftDelete(storyId) {
     
        $.ajax({
            url: '/User/Story/DraftDelete',
            type: 'POST',
            data: { 'storyId': storyId },
            success: function (result) {
                Swal.fire({
                    position: 'top-end',
                    icon: 'success',
                    title: 'Draft Deleted',
                    showConfirmButton: false,
                    timer: 2500
                })
                location.reload();
            },
            error: function () {
                alert('Error: Could not recommend mission.');
            }
        });
    }
</script>

