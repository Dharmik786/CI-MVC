@using CI_Entity.ViewModel
@using System.Net
@using System.Web
@model MissionList
@{
    Layout = "_navbar1";
    ViewData["Title"] = "Home Page";
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Landing Page</title>
    <link rel="stylesheet" href="~/css/StoriesListing.css" />

</head>
<body>


    <div class="container grid-container mt-4">

        <div class="row" id="Draft">
            @if (Model.stories.Count() != 0)
            {
                <h1>Drafted Story</h1>
                @foreach (var i in Model.stories)
                {
                    <div class="missioncard col-12 col-md-6 col-lg-4 mb-2">
                        <div class="card">
                            @{
                                var storyMedia = Model.storyMedia.FirstOrDefault(e => e.StoryId == i.StoryId && e.StoryType != "Video");
                            }
                            <div class="img-event">

                                @if (storyMedia != null)
                                {
                                    <img class="card-img-top card-img"
                                         src="@storyMedia.StoryPath"
                                         alt="Card image cap">
                                }
                                else
                                {
                                    <img class="card-img-top card-img"
                                         src="/Image/Grow-Trees-On-the-path-to-environment-sustainability-login.png"
                                         alt="Card image cap">
                                }
                                <div class="view-details-btn p-1"><button style="border-radius:25px" class="vbtn"> <a href="/User/Story/AddStory?storyId=@i.StoryId" style="text-decoration:none;color:black">Edit</a><i class="bi bi-arrow-right"></i></button></div>
                                <div><img src="~/Image/bin.png" class="delete-btn" onclick="DraftDelete(@i.StoryId)" /></div>
                                <div><button class="theme-btn ">@i.Mission.Theme.Title</button></div>

                            </div>


                            <div class="card-body m-2">
                                <h5 class="card-title ct">
                                    @i.Title
                                </h5>
                                <div class="card-text text-secondary ct2" >

                                    @Html.Raw(HttpUtility.HtmlDecode(i.Description))


                                </div>
                                <div class="d-flex">
                                    <img src="/Image/volunteer1.png" />
                                    <div class="d-flex justify-content-center m-3">@i.User.FirstName @i.User.LastName </div>
                                </div>

                            </div>
                        </div>
                    </div>
                }
            }
            else
            {
                <div>
                    <h4>No Draft Story</h4>
                </div>
            }





