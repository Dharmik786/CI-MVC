@using CI_Entity.ViewModel
@model MissionList

@{
    Layout = "_navbar1";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Landing-Page</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <script src="https://code.jquery.com/jquery-3.6.3.min.js" integrity="sha256-pvPw+upLPUjgMXY0G+8O0xUf+/Im1MZjXxxgOcBQBXU=" crossorigin="anonymous"></script>
    <!-- <link rel="stylesheet" href="/Css/text.css"> -->
    <link rel="stylesheet" href="/css/navbar.css" asp-append-version="true">
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
</head>

<body>
    <nav class="navbar navbar-expand-md navbar-lighte header2" aria-label="Second navbar example">
        <div class="container">
            <div class="col-9 col-lg-6 col-md-5 me-2">
                <form role="search" class="d-flex">
                    <img src="/Image/search.png" height="22px" width="21px" class="m-2">
                    <!-- <i class="bi bi-search mt-2"></i> -->
                    <input class="form-control searchbox" type="search" placeholder="Search mission....." aria-label="Search"
                           id="search" name="searchQuery" oninput="mySearch()">
                </form>
            </div>

            <button class="btn hamburger" type="button" data-bs-toggle="offcanvas"
                    data-bs-target="#filteroffcanvasWithBothOptions" aria-controls="offcanvasWithBothOptions">
                <img src="~/Image/filter.png">
            </button>

            @*--------------------------------------------OffCanvas------------------------*@
            <div class="offcanvas offcanvas-end offcanvas2" data-bs-scroll="true" tabindex="-1"
                 id="filteroffcanvasWithBothOptions" aria-labelledby="offcanvasWithBothOptionsLabel">

                <div class="offcanvas-header ">
                    <button type="button" class="btn-close" data-bs-dismiss="offcanvas" aria-label="Close"></button>
                </div>

                <div class="offcanvas-body navbar-nav me-auto mb-2 mb-lg-0 ">
                    <li class="nav-item dropdown mt-3">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Country
                        </a>

                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;" id="">
                            @if (ViewBag.Country != null)
                            {
                                @foreach (var item in ViewBag.Country)
                                {
                                    <li>
                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" id="" class="checkbox ms-3 " id="@item.Name" value="@item.Name" name="country">
                                            @item.Name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>

                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            City
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;">
                            @if (ViewBag.City != null)
                            {
                                @foreach (var item in ViewBag.City)
                                {
                                    <li>
                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" id="" class="checkbox ms-3 " id="@item.Name" value="@item.Name">
                                            @item.Name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Theme
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;">
                            @if (ViewBag.Themes != null)
                            {
                                @foreach (var item in ViewBag.Themes)
                                {
                                    <li>

                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" id="" class="checkbox ms-3 " id="@item.Title" value="@item.Title">
                                            @item.Title
                                        </a>

                                    </li>
                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Skill
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;">
                            @if (Model.skills != null)
                            {
                                @foreach (var item in Model.skills)
                                {
                                    <li>

                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox"  class="checkbox ms-3 " id="@item.SkillName" value="@item.SkillName">
                                            @item.SkillName
                                        </a>

                                    </li>
                                }
                            }
                        </ul>
                    </li>

                </div>
            </div>

            <div class="second-div col-lg-6 col-md-7">
                <ul class="navbar-nav">
                    <li class="nav-item col-lg-3 col-md-3  dropdown filter-item">
                        <a class="nav-link dropdown d-flex" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <p class="me-auto mt-2">Country</p>
                            <img src="/Image/drop-down.png" alt="" height="10%" width="10%" class="mt-3">
                        </a>

                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;" id="countryDropdown">
                            @if (ViewBag.Country != null)
                            {
                                @foreach (var item in ViewBag.Country)
                                {
                                    <li>
                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" class="checkbox ms-3 " id="@item.CountryId" value="@item.Name" name="country" onchange="mySearch()" @*onchange="updateUrlForCountry()"*@>
                                            @item.Name
                                        </a>
                                    </li>

                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item col-lg-3  col-md-3 dropdown filter-item">
                        <a class="nav-link dropdown d-flex" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false"> 
                            <p class="me-auto mt-2">City</p>
                            <img src="/Image/drop-down.png" alt="" height="10%" width="10%" class="mt-3">
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;" id="cityDropdown">
                            @if (ViewBag.City != null)
                            {
                                @foreach (var item in ViewBag.City)
                                {
                                    <li>
                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" class="checkbox ms-3 " id="@item.CityId" value="@item.Name" name="city" onchange="mySearch()">
                                            @item.Name
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item col-lg-3  col-md-3 dropdown filter-item">
                        <a class="nav-link dropdown d-flex" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <p class="me-auto mt-2">Theme</p>
                            <img src="/Image/drop-down.png" alt="" height="10%" width="10%" class="mt-3">
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;" id="themeDropdown">
                            @if (ViewBag.Themes != null)
                            {
                                @foreach (var item in ViewBag.Themes)
                                {
                                    <li>
                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" id="" class="checkbox ms-3 " id="@item.Title" value="@item.Title" name="theme" onchange="mySearch()">
                                            @item.Title
                                        </a>
                                    </li>
                                }
                            }
                        </ul>
                    </li>

                    <li class="nav-item  col-lg-3 col-md-3 dropdown filter-item filter-item-skill">
                        <a class="nav-link dropdown d-flex" href="#" role="button" data-bs-toggle="dropdown"
                           aria-expanded="false">
                            <p class="me-auto mt-2">Skill</p>
                            <img src="/Image/drop-down.png" alt="" height="10%" width="10%" class="mt-3">
                        </a>
                        <ul class="dropdown-menu" style="height:200px; overflow-y:auto;">
                            @if (Model.skills != null)
                            {
                                @foreach (var item in Model.skills)
                                {
                                    <li>

                                        <a class="dropdown-item p-0 mt-1" href="#">
                                            <input type="checkbox" id="" class="checkbox ms-3 " id="@item.SkillName" name="skill" value="@item.SkillName" onchange="mySearch()">
                                            @item.SkillName
                                        </a>

                                    </li>
                                }
                            }
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>


    @* <partial name="_navbar1"/>*@
    <div class="filters-section d-flex align-items-center flex-wrap justify-content-center mt-2">
    </div>


    <div class="container grid-container mt-2">
        <div class="row mb-2">
            <div class="d-flex">
                <div class="firstdiv me-auto d-flex tmdiv">
                    <div id="countMission1"></div>
                </div>

                <div class="sort-list-grid d-flex">

                    <div class="dropdown sort me-2 mt-1">
                        <select class="btn dropdown d-flex sortSelect me-2 ms-0 " onchange="mySearch()">
                            <option selected>Sort By</option>
                            <option value="Newest">Newest</option>
                            <option value="Oldest">Oldest</option>
                            <option value="Lowest Seats">Lowest Seats</option>
                            <option value="Highest Seats">Highest Seats</option>
                            <option value="Registration deadline">Registration deadline</option>
                        </select>
                    </div>


                    <div class="me-2 mt-1">
                        <button onclick="grid()" id="grid"><img src="/Image/grid.png"></button>
                    </div>
                    <div class="mt-1 me-4" style="border:none">
                        <button onclick="list()" id="list"><i class="bi bi-list-task fs-5 "></i></button>
                    </div>
                </div>

            </div>
        </div>

    </div>


    <div class="container" id="missions"></div>

   
    <partial name="_Footer"></partial>



   
   
    <script src="~/js/search.js"></script>

    <script src="~/js/filter.js"></script>

</body>
</html>
