@{
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Reset-Password</title>
    <link rel="stylesheet" href="/Css/bootstrap.min.css">
    <!-- <script src="/Js/bootstrap.bundle.min.js"></script> -->
    <link rel="stylesheet" href="/Css/Reset-Password.css">
</head>

<body>
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-8 col-md-12 col-sm-12 col-xs-12 ">
                <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel" data-bs-interval="5000">

                    <div class="carousel-inner">
                        @foreach (var i in Model.Banners)
                        {
                            @if (i.SortOrder == 1)
                            {
                                <div class="carousel-item active" data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                            else
                            {
                                <div class="carousel-item " data-bs-interval="5000">
                                    <img src="@i.Image" class="d-block w-100 carousel-img object-fit-none" alt="...">
                                    <div class="carousel-caption d-none d-md-block ">
                                        <h2>Sed ut perspiciatis unde omnis iste natus voluptatem.</h2>
                                        <p>
                                            @i.Text
                                        </p>
                                    </div>
                                </div>
                            }
                        }
                    </div>

                    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>

            <div class="align-self-center col-lg-4 col-md-12 col-sm-12 col-xs-12 mt-2">
                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-9 col-sm-9">

                        <form asp-action="Reset_Password" asp-controller="User" method="post">

                            <input asp-for="Email" type="Email" class="form-control" id="exampleInputEmail1" hidden aria-describedby="emailHelp" placeholder=".......">
                            @*<input asp-for="UpdatedAt" class="form-control" id="exampleInputEmail1" hidden value="@DateTime.Now">*@
                            <input asp-for="Token" class="form-control" id="exampleInputEmail1" hidden aria-describedby="emailHelp" placeholder=".......">

                            <div class="text-center mt-3">
                                <h4>New Password</h4>
                            </div>
                            <div class="text-center mt-3">
                                <span>Please enter a new password in the fields below.</span>
                            </div>
                            <input type="Email" asp-for="Email" hidden/>
                            <input type="text" asp-for="Token" hidden/>
                            <div class="mt-3">
                                <label asp-for="Password">New Password</label>
                                <input asp-for="Password" type="password" class="form-control">
                            </div>
                            <div class="mt-3">
                                <label >Confrim Password</label>
                                <input asp-for"ConfrimPassword" type="password" class="form-control">
                            </div>
                            <div class="mt-4">
                                <button class="btn">Change Password</button>
                            </div>
                            <div class="text-center mt-3">
                                <a asp-action="Login" asp-controller="User">Login</a>
                            </div>
                        </form>
                    </div>
                </div>
                <div class="text-center text-secondary mt-4">
                    <p>Privacy Policy</p>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
</body>

</html>