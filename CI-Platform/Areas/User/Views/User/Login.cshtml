                <div class="row justify-content-center">
                    <div class="col-lg-9 col-md-9 col-sm-9">


                        <form asp-controller="User" asp-action="Login" method="post" class="form-horizontal" >
                            <div class="mb-3">
                                <div class="mb-5 text-danger">@ViewBag.Email</div>
                                <label asp-for="Email" class="form-label">Email address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Email" id="exampleInputEmail1" 
                                       aria-describedby="emailHelp">
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Password" 
                                       id="exampleInputPassword1">
                                <span asp-validation-for="Password" class="text-danger" ></span>

                            </div>
                            <div class="mt-4">
                                <button type="submit" class="btn">Login</button>
                            </div>
                            <div class="mt-3 text-center">
                                <a nav-link  asp-action="Forget" asp-controller="User">Lost Password?</a>
                            </div>
                            <div class="mt-2 text-center">
                                <span>Don’t have an account? <a nav-link text-dark asp-area="" asp-controller="User" asp-action="Registration">Create Account</a>  </span>
